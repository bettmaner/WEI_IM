<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/blue_0C"></solid>
            <stroke android:width="1dp" android:color="@color/blue_0C"/> <!-- 边框宽度、颜色 -->
            <corners android:radius="3dp" />   <!-- 边角圆弧的半径 -->
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/background_gray"></solid>
            <stroke android:width="1dp" android:color="@color/background_gray"/> <!-- 边框宽度、颜色 -->
            <corners android:radius="3dp" />   <!-- 边角圆弧的半径 -->
        </shape>
    </item>
</selector>